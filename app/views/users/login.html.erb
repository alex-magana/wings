<div class="row" id="login-page">
  <div class="col s12 z-depth-6 card-panel" id="login-details">
    <% if flash[:notice] %>
    <div class="row margin">
      <div class="input-field col s12">
        <p>
          <%= flash[:notice] %>
        </p>
      </div>
    </div>
    <% end %>
    <%= form_tag(user_authenticate_path, method: "post", class:"login-form") do %>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= email_field_tag "email", nil, class: "validate", required: true %>
          <%= label_tag "email", "Email", class: "center-align", :data => { :error => 'Wrong' } %>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-action-lock-outline prefix"></i>
          <%= password_field_tag :password, nil, required: true %>
          <%= label_tag(:password, "Password") %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m12 l12 login-text">
          <%= check_box_tag(:"remember-me") %>
          <%= label_tag(:"remember-me", "Remember me") %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= button_tag(type: "submit", class: "submit btn waves-effect waves-light blue col s12", disable_with: "Authenticating...") do %>
           Login
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6 m6 l6">
          <p class="margin medium-small">
            <%= link_to "Register Now!", new_user_path %>
          </p>
        </div>
        <div class="input-field col s6 m6 l6">
          <p class="margin right-align medium-small">
            <%= link_to "Forgot password?", reset_password_path %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
