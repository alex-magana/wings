<div class="row" id="signup-page">
  <form class="col s12 z-depth-6 card-panel" id="new-user" action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="row">
      <div class="input-field col s4">
        <i class="material-icons prefix">assignment_ind</i>
        <input required="required" placeholder="First Name" type="text" name="first_name" class="validate">
      </div>

      <div class="input-field col s4">
        <i class="material-icons prefix">assignment_ind</i>
        <input required="required" placeholder="Middle Name" type="text" name="middle_name" class="validate">
      </div>

      <div class="input-field col s4">
        <i class="material-icons prefix">assignment_ind</i>
        <input required="required" placeholder="Last Name" type="text" name="last_name" class="validate">
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">mail</i>
        <input required="required" placeholder="Email Address" type="email" name="email" class="validate">
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">lock</i>
        <input required="required" placeholder="Password" type="password" name="password" class="validate">
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <button type="submit" class="submit btn waves-effect blue">Create account
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>

    <div class="row">
      <div class="col s12 login-path">
        <p>Already have an account?
          <a href="<%= login_path %>">Log in</a>
        </p>
      </div>
    </div>
  </form>
</div>
