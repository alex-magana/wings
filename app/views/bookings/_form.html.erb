<%= form_for booking, :url => { :action => "confirm_booking" } do |f| %>
<% if booking.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(booking.errors.count, "error") %>
    prohibited this project from being saved:</h2>

  <ul>
    <% booking.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="field">
  <%= f.hidden_field :user_id %>
</div>
<div class="field">
  <%= f.label :flight_id %>
  <br/>
  <%= f.text_field :flight_id, readonly: true %>
</div>
<div class="field">
  <%= f.label :booking_code %>
  <br/>
  <%= f.text_field :booking_code, readonly: true %>
</div>

<div class="field">
  <%= f.label :email %>
  <br/>
  <% if current_user %>
  <%= f.email_field :email, readonly: true %>
  <% else %>
  <%= f.email_field :email %>
  <% end %>
</div>
<h6 class="align">Passengers</h6>
<div id='passengers'>
  <%= f.fields_for :passengers do |passenger| %>
  <%= render 'passenger_fields', :f => passenger %>
  <% end %>
  <div class='links'>
    <%= link_to_add_association 'add passenger', f, :passengers, class: "btn waves-effect waves-light blue" %>
  </div>
</div>
<div class="actions">
  <%= f.submit "CREATE BOOKING", class: "btn waves-effect waves-light blue create-booking" %>
</div>
<% end %>
